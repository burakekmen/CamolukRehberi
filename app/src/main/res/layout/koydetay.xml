<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplanim"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    ads:adUnitId="ca-app-pub-1757058856747719/1223282382"
    tools:context="com.burakekmen.camolukrehberi.KoyDetay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnYaziKucult"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="A-"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnYaziBuyult"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:text="A+"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtKoyAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Köy Adı"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imgKoyDetay"
                android:layout_width="650px"
                android:layout_height="400px"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rsmuyari" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txtKoyDetayIcerik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yazı"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/background_material_dark" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txtKoyMuhtari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Köy Muhtarı"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/background_material_dark" />

            <TextView
                android:id="@+id/txtKoyNufus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nüfus"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/background_material_dark" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btnKonumaGit"
                android:layout_width="211dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:background="@drawable/btnkonumum" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-1757058856747719/1223282382" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>